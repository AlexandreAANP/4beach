{% extends 'base.html.twig' %}

{% block body %}
    <section class="row justify-content-center background-section-image">
        {#<div class="site-module-title container">{% trans %}Customer Area{% endtrans %}</div>#}
        <div class="row justify-content-center background-login mt-5 mb-5">
            <div class="card m-2 customer-login-card" style="width: 25rem; padding: 5px">
                <div class="row">
                    <div class="d-flex justify-content-center w-100 mt-2">
                        <div id="customer_msg_signup" class="alert alert-warning" role="alert" style="display: none; box-shadow: 0 0 2px 3px #fff; padding: 5px; border: #ccc 1px solid; border-radius: 5px; margin-bottom: 10px"></div>
                    </div>
                </div>
                <div class="text-center" id="customer_signup_redirect" style="display: none">
                    <div class="bg-light rounded">{% trans %}Redirecting{% endtrans %}</div>
                </div>
                <form action="{{ baseUri }}/customer/signup" id="form_signup" method="POST" novalidate>
                    {#<div class="form-group form-title text-center">
                        {% trans %}Type your data for creating your account{% endtrans %}
                    </div>#}
                    <div class="h4 first-title-login">
                        Criar nova Conta de Cliente
                    </div>
                    <div class="h6 second-title-login">
                        Informação Pessoal
                    </div>
                    <div class="form-group">
                        {#<label for="name">{% trans %}Name{% endtrans %}:</label><br>#}
                        <input type="text" id="name" name="name" placeholder="Name" class="form-control" autofocus required tabIndex="1">
                    </div>
                    <div class="form-group">
                        {#<label for="name">{% trans %}Last name{% endtrans %}:</label><br>#}
                        <input type="text" id="name" name="name" placeholder="Last Name" class="form-control" autofocus required tabIndex="1">
                    </div>

                    {#<div class="form-group">
                        <label for="phone">{% trans %}Mobile{% endtrans %}:</label><br>
                        <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" tabIndex="2">
                    </div>#}
                    <div class="form-group">
                        {#<label for="email">{% trans %}Email{% endtrans %}:</label><br>#}
                        <input type="text" id="email" name="email" placeholder="Email" class="form-control" required tabIndex="3">
                    </div>
                    <div class="justify-content-center costumer-checkradio-Newsletter">
                        <center>
                        <input type='checkbox'><span> Receber a Newsletter</span>
                        </center>
                    </div>
                    <div class='h5 second-title-login mt-6 mb-6'>
                        Informação de Acesso
                    </div>
                    <div class="form-group">
                        {#<label for="password">{% trans %}Password{% endtrans %}:</label><br>#}
                        <input type="password" id="password" name="password" placeholder="Password" class="form-control" required tabIndex="4">
                    </div>
                    <div class="form-group">
                        {#<label for="password_confirm">{% trans %}Password Confirm{% endtrans %}:</label><br>#}
                        <input type="password" id="password_confirm" name="password_confirm" placeholder="Password Confirm" class="form-control" required tabIndex="5">
                    </div>
                     <div class="d-flex justify-content-center">
                         <input type="submit" id="form_customer_signup_submit" class="login-btn-entrar" data-loading-text="{% trans %}Sending{% endtrans %}" value="{% trans %}Create{% endtrans %}" tabIndex="6">
                    </div>




                    {#<div class="d-block w-100 text-center">
                        <div class="d-inline-block">
                            <div id="recaptcha_html_element"></div>
                        </div>
                    </div>
                   
                    <div class="d-flex justify-content-between">
                        <span class="mt-2"><a href="{{ baseUri }}/customer/login" class="btn btn-outline-secondary btn-sm" tabIndex="7">{% trans %}I already have an Account! Go to Login{% endtrans %}</a></span>
                       
                    </div>#}
                </form>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() {
            var options = {
            };
            querybizCustomer.init(options);
        });
    </script>

    <script type="text/javascript">
        var onloadCallback = function() {
            grecaptcha.render('recaptcha_html_element', {
                'sitekey' : '{{ LayoutFunctions.getSettingsVars('GOOGLE_CAPTCHA_PUBLIC_KEY_V2') }}'
            });
        };
    </script>

    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
{% endblock %}